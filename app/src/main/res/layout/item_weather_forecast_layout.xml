<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="101dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|bottom"
                android:paddingBottom="5dp">

                <!--<TextView-->
                <!--android:id="@+id/tv_forecast_name"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="今天 "-->
                <!--android:textColor="@color/md_black_1000"-->
                <!--android:textSize="15sp" />-->

                <TextView
                    android:id="@+id/tv_forecast_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07 / 25"
                    android:textColor="@color/md_grey_900"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|top"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/tv_forecast_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="温度 "
                    android:textColor="@color/md_black_1000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_forecast_temp_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_forecast_temp"
                    android:text="20"
                    android:textColor="@color/md_grey_900"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_forecast_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_forecast_temp_min"
                    android:text="-"
                    android:textColor="@color/md_grey_900" />

                <TextView
                    android:id="@+id/tv_forecast_temp_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_forecast_end"
                    android:text="30"
                    android:textColor="@color/md_grey_900"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="bottom|left"
                android:paddingBottom="5dp"
                android:paddingLeft="24dp">

                <TextView
                    android:id="@+id/tv_forecast_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="白天 "
                    android:textColor="@color/md_black_1000"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_forecast_d_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/tv_forecast_d"
                    android:src="@drawable/qing_icon" />

                <TextView
                    android:id="@+id/tv_forecast_d_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/iv_forecast_d_icon"
                    android:text="晴"
                    android:textColor="@color/md_grey_900"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="top|left"
                android:paddingLeft="24dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/tv_forecast_n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="夜晚 "
                    android:textColor="@color/md_black_1000"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_forecast_n_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/tv_forecast_n"
                    android:src="@drawable/qing_icon" />

                <TextView
                    android:id="@+id/tv_forecast_n_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/iv_forecast_n_icon"
                    android:text="晴"
                    android:textColor="@color/md_grey_900"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="bottom|left|center"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="风力 "
                    android:textColor="@color/md_black_1000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_forecast_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/tv1"
                    android:text="级"
                    android:textColor="@color/md_grey_900"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left|top|center"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="湿度 "
                    android:textColor="@color/md_black_1000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_forecast_hum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/tv2"
                    android:text="20"
                    android:textColor="@color/md_grey_900"
                    android:textSize="14sp" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/md_black_1000"></View>
</LinearLayout>